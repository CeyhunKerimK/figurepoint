extends ../../layout

block content
  .container
    h1.mb-4 Arama Sonuçları
    p Aranan terim: "#{searchTerm}"
    if products.length > 0
      .row
        each product in products
          .col-md-4.mb-4
            .card
              if product.imageUrl
                img.card-img-top(src=product.imageUrl alt=product.name)
              else
                img.card-img-top(src="/images/default-product.jpg" alt="Ürün Resmi Yok")
              .card-body
                h5.card-title= product.name
                p.card-text
                  strong Fiyat: 
                  | #{product.price} TL
                p.card-text
                  strong Stok: 
                  | #{product.stock}
                a.btn.btn-primary(href=`/product/${product.id}`) Detay
    else
      p Aramanıza uygun ürün bulunamadı.
    a.btn.btn-secondary.mt-3(href="/product/list") Tüm Ürünlere Dön